{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "{\"createdOn\":\"Mac\",\"createdBy\":\"Amplify\",\"createdWith\":\"14.0.1\",\"stackType\":\"function-Lambda\",\"metadata\":{\"whyContinueWithGen1\":\"Prefer not to answer\"}}",
  "Parameters": {
    "env": {
      "Type": "String"
    },
    "deploymentBucketName": {
      "Type": "String"
    },
    "s3Key": {
      "Type": "String"
    },
    "PayUMerchantKey": {
      "Type": "String"
    },
    "PayUMerchantSalt": {
      "Type": "String"
    },
    "PayUClientId": {
      "Type": "String"
    },
    "PayUClientSecret": {
      "Type": "String"
    },
    "AppUrl": {
      "Type": "String"
    }
  },
  "Resources": {
    "LambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Handler": "index.handler",
        "Runtime": "nodejs18.x",
        "Code": {
          "S3Bucket": {
            "Ref": "deploymentBucketName"
          },
          "S3Key": {
            "Ref": "s3Key"
          }
        },
        "MemorySize": 128,
        "Timeout": 30,
        "Environment": {
          "Variables": {
            "PAYU_MERCHANT_KEY": {
              "Ref": "PayUMerchantKey"
            },
            "PAYU_MERCHANT_SALT": {
              "Ref": "PayUMerchantSalt"
            },
            "PAYU_CLIENT_ID": {
              "Ref": "PayUClientId"
            },
            "PAYU_CLIENT_SECRET": {
              "Ref": "PayUClientSecret"
            },
            "PAYU_BASE_URL": "https://test.payu.in",
            "APP_URL": {
              "Ref": "AppUrl"
            }
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "LambdaExecutionRole",
            "Arn"
          ]
        }
      }
    },
    "LambdaExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "PaymentProcessingPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": "arn:aws:logs:*:*:*"
                }
              ]
            }
          }
        ]
      }
    }
  }
}